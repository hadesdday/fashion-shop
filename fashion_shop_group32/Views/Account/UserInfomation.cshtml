@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@using fashion_shop_group32.Models;
@using fashion_shop_group32.Models.Dao;
<h2>Login</h2>

<section id="aa-catg-head-banner">
    <img src="~/Content/img/fashion/fashion-header-bg-8.jpg" alt="fashion img">
    <div class="aa-catg-head-banner-area">
        <div class="container">
            <div class="aa-catg-head-banner-content">
                <h2>Account Page</h2>
                <ol class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li class="active">Account Management</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- / catg header banner section -->
<!-- Cart view section -->
<!--T có sửa phần view của trang Login nha (Hiệp)-->


<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">
                        <h4>Thông tin tài khoản: </h4>
                        <div class="col-md-6">
                            <div class="aa-myaccount-login">
                                <h4>Thông tin người dùng</h4>
                                <form action="" class="aa-login-form">
                                    <label for="">UserName:@Session["UserName"]<span>*</span></label>
                                    <br />
                                    <label for="">Password:*******<span>*</span></label>
                                    <br />
                                    <a href="/Account/ChangePassword" class="aa-primary-btn">Thay Mật Khẩu</a>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="aa-myaccount-register">
                                <h4>Địa Chỉ Giao Hàng</h4>
                                @{
                                Customer cus = (Customer)Session["customer"];
                                }
                                <form action="" class="aa-login-form">
                                    <label for="">Tên khách Hàng:@cus.NameCus<span>*</span></label>
                                    <label for="">Email:@cus.email<span>*</span></label>
                                    <label for="">Số Điện Thoại:@cus.Phone<span>*</span></label>
                                    <label for="">Email:@cus.email<span>*</span></label>
                                    <label for="">Địa Chỉ:@cus.Address<span>*</span></label>
                                    <a href="/Account/EditInfoCus" class="aa-primary-btn">Sửa Thông Tin</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
