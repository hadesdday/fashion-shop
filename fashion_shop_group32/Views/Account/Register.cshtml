@model fashion_shop_group32.Models.Users

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

<section id="aa-catg-head-banner">
    <img src="~/Content/img/fashion/fashion-header-bg-8.jpg" alt="fashion img">
    <div class="aa-catg-head-banner-area">
        <div class="container">
            <div class="aa-catg-head-banner-content">
                <h2>Account Page</h2>
                <ol class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li class="active">Account</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- / catg header banner section -->
<!-- Cart view section -->
<!--T có sửa phần view của reang Register nha (Hiệp)-->
<!-- Cart view section -->
<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">

                        <div class="col-md-6">
                            <div class="aa-myaccount-register">
                                <h4>Register</h4>
                                @using (Html.BeginForm())
                                {
                                    <p style="color:red">@ViewBag.Message</p>
                                    <br />
                                    <label for="">Full Name<span>*</span></label>
                                    <br />
                                    <input type="text" placeholder="Full Name" name="ten_kh">
                                    <br />
                                    <label for="">User Name<span>*</span></label>
                                    <br />
                                    <input type="text" placeholder="Username" name="username">
                                    <br />
                                    <label for="">Password<span>*</span></label>
                                    <br />
                                    <input type="password" placeholder="Password" name="password">
                                    <br />
                                    <label for="">Confirm Password<span>*</span></label>
                                    <br />
                                    <input type="password" placeholder="Confirm Password" name="confirmPassword">
                                    <br />
                                    <label for="">Email<span>*</span></label>
                                    <br />
                                    <input type="email" placeholder="Email" name="email">
                                    <br />
                                    <label for="">Phone<span>*</span></label>
                                    <br />
                                    <input type="text" placeholder="Phone" name="sodt">
                                    <br />
                                    <label for="">Address<span>*</span></label>
                                    <br />
                                    <input type="text" placeholder="Address" name="diachi">
                                    <br />
                                    <button type="submit" class="aa-browse-btn">Register</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Cart view section -->
<div>
    @Html.ActionLink("Back To Login", "Login")
</div>