@model fashion_shop_group32.Models.Users

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<section id="aa-catg-head-banner">
    <img src="~/Content/img/fashion/fashion-header-bg-8.jpg" alt="fashion img">
    <div class="aa-catg-head-banner-area">
        <div class="container">
            <div class="aa-catg-head-banner-content">
                <h2>Account Page</h2>
                <ol class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li class="active">Account</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- / catg header banner section -->
<!-- Cart view section -->
<!--T có sửa phần view của trang Login nha (Hiệp)-->


<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="aa-myaccount-login">
                                <h4>Login</h4>
                                @using (Html.BeginForm())
                                {
                                    <p style="color:red">@ViewBag.Message</p>
                                    <br />
                                    <label for="">Username<span>*</span></label>
                                    <br />
                                    <input type="text" placeholder="Username" name="username">
                                    <br />
                                    <label for="">Password<span>*</span></label>
                                    <br />
                                    <input type="password" placeholder="password" name="password">
                                    <hr />
                                    <button type="submit" class="aa-browse-btn">Login</button>
                                    <hr />
                                    <label class="rememberme" for="rememberme"><input type="checkbox" id="rememberme"> Remember me </label>
                                    <p class="aa-lost-password"><a href="#">Lost your password?</a></p>
                                    <div class="aa-register-now">
                                        Don't have an account?<a href="/Account/Register">Register now!</a>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>