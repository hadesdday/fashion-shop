
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@using fashion_shop_group32.Models;
@using fashion_shop_group32.Models.Dao;
<h2>Login</h2>

<section id="aa-catg-head-banner">
    <img src="~/Content/img/fashion/fashion-header-bg-8.jpg" alt="fashion img">
    <div class="aa-catg-head-banner-area">
        <div class="container">
            <div class="aa-catg-head-banner-content">
                <h2>Account Page</h2>
                <ol class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li class="active">Account Management</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- / catg header banner section -->
<!-- Cart view section -->
<!--T có sửa phần view của trang Login nha (Hiệp)-->


<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">
                        <h4>User Management: User</h4>
                        <div class="col-md-6">
                            <div class="aa-myaccount-register">
                                <h4>Change your password:</h4>
                                @using (Html.BeginForm("changePassword", "Account"))
                                {
                                    <p style="color:red">@ViewBag.Message</p>
                                    <br />
                                    <label for="">UserName:@Session["userName"]<span>*</span></label>
                                    <br />
                                    <label for="">Old Password<span>*</span></label>
                                    <br />
                                    <input type="password" placeholder="type your old password" name="Oldpassword">
                                    <br />
                                    <label for="">New Password<span>*</span></label>
                                    <br />
                                    <input type="password" placeholder="type your new password" name="newPassword">
                                    <br />
                                    <label for="">Confirm New Password<span>*</span></label>
                                    <br />
                                    <input type="password" placeholder="confirm new password" name="confirmPassword">
                                    <br />
                                    <button type="submit" class="aa-browse-btn">Change</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

